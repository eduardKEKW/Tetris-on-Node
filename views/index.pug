doctype html
html
  head
    title Tetris
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(href="https://fonts.googleapis.com/css?family=Big+Shoulders+Display&display=swap" rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/css/index.min.css')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js" defer)
  body
    div.body
        div.center
            form(action="/game", method="post").form
                div.form__size
                    input(type="number", placeholder='max-rows', name='rows', required ).form__input-size
                    p X
                    input(type="number", placeholder='max-cols', name='cols', required).form__input-size
                input(type='number', placeholder='Player count.', name='playersCount', min=1).form__input-name
                input(type='submit' value='Create game').form__button
